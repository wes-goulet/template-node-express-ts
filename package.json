{
  "name": "template-ts-node",
  "version": "1.0.0",
  "license": "MIT",
  "dependencies": {
    "express": "4.16.3",
    "express-graphql": "0.6.12",
    "graphql": "0.13.2"
  },
  "devDependencies": {
    "@types/express": "4.11.1",
    "@types/express-graphql": "0.6.1",
    "@types/graphql": "0.13.0",
    "@types/node": "9.6.6",
    "concurrently": "^3.5.1",
    "nodemon": "1.17.3",
    "prettier": "1.12.1",
    "tslint": "5.9.1",
    "tslint-config-airbnb": "5.8.0",
    "tslint-config-prettier": "1.12.0",
    "typescript": "2.8.3"
  },
  "scripts": {
    "postinstall": "node_modules/.bin/tsc",
    "tsc-watch": "node_modules/.bin/tsc -w",
    "start": "node ./dist/server.js",
    "docker-build": "docker build -t hotdeployserver .",
    "docker-up": "docker-compose down && docker-compose up",
    "docker-debug": "node_modules/.bin/concurrently -k \"yarn tsc-watch\" \"yarn docker-up\"",
    "debug": "node --inspect=0.0.0.0:5858 --nolazy ./dist/server.js",
    "nodemon-watch": "node_modules/.bin/nodemon --watch ./dist --inspect=0.0.0.0:5858 --nolazy ./dist/server.js",
    "debug-watch": "node_modules/.bin/concurrently -k \"yarn tsc-watch\" \"yarn nodemon-watch\""
  }
}
